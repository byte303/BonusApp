<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/borders_radius</item>
        <item name="colorPrimary">@color/text</item>
        <item name="colorPrimaryVariant">@color/text</item>
        <item name="textColorAlertDialogListItem">@color/text</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/selector_edtbox</item>
        <item name="hintTextColor">@color/text</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OtpWidget"/>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:textColor">@color/color_radio</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="RadioButtonPaymentStyle">
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textSize">16sp</item>

    </style>

</resources>