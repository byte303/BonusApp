<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:contentPaddingRight="24dp"
    app:contentPaddingLeft="24dp"
    app:contentPaddingTop="52dp"
    app:contentPaddingBottom="52dp"
    app:cardCornerRadius="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_done"
            android:layout_width="110dp"
            android:layout_height="110dp"/>

        <TextView
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_bold"
            android:text="Запрос успешно отправлен!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Ожидаем ответа сети, карта будет добавлена после подтверждения."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>